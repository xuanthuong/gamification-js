
doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    link(rel='apple-touch-icon', sizes='76x76', href='/assets/img/apple-icon.png')
    link(rel='icon', type='image/png', href='/assets/img/favicon.png')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title #{title} - Gamification - DOU Networks
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
    meta(name='viewport', content='width=device-width')

    include ../../partials/styles
  body
    .login-page
        #app.content
            .container-fluid
                .row 
                    .col-md-4.col-md-offset-4
                        .card
                            form#loginform(action='/auth/signin', method='post')
                                .card-header.card-header-icon(data-background-color='rose')
                                    i.material-icons contacts
                                .card-content
                                    h4.card-title Login
                                    .form-group.label-floating.is-empty
                                        label.control-label Email Address*
                                        input.form-control(name='email', type='email', email='true', required='true', aria-required='true', id="email")
                                        span.material-input
                                    .form-group.label-floating.is-empty
                                        label.control-label Password*
                                        input.form-control(name='password', type='password', required='true', aria-required='true', id="password")
                                        span.material-input
                                    .category.form-category
                                        .text-danger
                                            b #{msg}
                                    .form-footer.text-right
                                        .checkbox.pull-left
                                            label
                                                input(type='checkbox', name='rememberme')
                                                span.checkbox-material
                                                |  Remember Me
                                        button.btn.btn-rose.btn-fill(type='submit') Login
  include ../../partials/scripts
    script(src='/assets/pages/home.js')

